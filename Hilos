package fibonacci;
public class FibonacciThread extends Thread implements Runnable{
    public int numero;
    public FibonacciThread(int numero){
        this.numero = numero;
    }
public void run(){
        for (int i = 0; i < numero; i++) {
            System.out.print(fibonacci(i)+" ");
        }
    }
int fibonacci(int n){
        if (n>1){
           return fibonacci(n-1) + fibonacci(n-2); 
        }
        else if (n==1) {
            return 1;
        }
        else if (n==0){
            return 0;
        }
        else{
            System.out.println("Debes ingresar un tamaño mayor o igual a 1");
            return -1; 
        }
    }
    public int getTamaño() {
        return numero;
    }
    public void setTamaño(int tamaño) {
        this.numero = tamaño;
    }
}
package fibonacci;

/**
 *
 * @author nto12
 */
public class Main {

    public static void main(String[] args) {
        
        FibonacciThread f1 = new FibonacciThread(10); 
        f1.start();
        FibonacciThread f2 = new FibonacciThread(19); 
        f2.start();
        Thread f3 = new Thread(new FibonacciThread(14));
        f3.start();
    }
}
