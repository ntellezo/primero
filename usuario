package usuario;
import java.util.Scanner;
/**
 *
 * @author nto12
 */
public class Usuario {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner reader = new Scanner(System.in);
        System.out.println("Ingerese su usuario");
        String usuario1 = reader.nextLine();
        System.out.println("Ingerese su contraseña");
        String contrasena1 = reader.nextLine();
        if ((contrasena1.equals ("soyeljefe")) && (usuario1.equals("jefe") ))
                System.out.println("Cargando");
        else
                System.out.println("Usuario o contraseña invalida");          
    }    
}
